<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#030303">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="A"
        android:id="@+id/btnA"
        android:textColor="#fbfa21"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_alignTop="@+id/btnB"
        android:layout_alignParentLeft="true"
        android:onClick="clickLetter"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="C"
        android:id="@+id/btnC"
        android:textColor="#fbfa21"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_alignTop="@+id/btnB"
        android:layout_toRightOf="@+id/btnB"
        android:onClick="clickLetter"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="D"
        android:id="@+id/btnD"
        android:textColor="#fbfa21"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_alignTop="@+id/btnC"
        android:layout_toRightOf="@+id/btnC"
        android:onClick="clickLetter"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="E"
        android:id="@+id/btnE"
        android:textColor="#fbfa21"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_alignTop="@+id/btnD"
        android:layout_toRightOf="@+id/btnD"
        android:onClick="clickLetter"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="F"
        android:id="@+id/btnF"
        android:textColor="#fbfa21"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_alignTop="@+id/btnE"
        android:layout_alignParentRight="true"
        android:onClick="clickLetter"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="B"
        android:id="@+id/btnB"
        android:textColor="#fbfa21"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_above="@+id/btnG"
        android:layout_toRightOf="@+id/btnA"
        android:onClick="clickLetter"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="G"
        android:id="@+id/btnG"
        android:textColor="#fbfa21"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_alignTop="@+id/btnH"
        android:layout_alignParentLeft="true"
        android:onClick="clickLetter"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="H"
        android:id="@+id/btnH"
        android:textColor="#fbfa21"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_above="@+id/btnN"
        android:layout_toRightOf="@+id/btnG"
        android:onClick="clickLetter"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="I"
        android:id="@+id/btnI"
        android:layout_alignTop="@+id/btnH"
        android:layout_alignLeft="@+id/btnC"
        android:textColor="#fbfa21"
        android:textStyle="bold"
        android:typeface="sans"
        android:onClick="clickLetter"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="J"
        android:id="@+id/btnJ"
        android:layout_alignTop="@+id/btnI"
        android:layout_toLeftOf="@+id/btnE"
        android:textColor="#fbfa21"
        android:textStyle="bold"
        android:typeface="sans"
        android:onClick="clickLetter"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="K"
        android:id="@+id/btnK"
        android:layout_alignTop="@+id/btnJ"
        android:layout_toLeftOf="@+id/btnF"
        android:textColor="#fbfa21"
        android:textStyle="bold"
        android:typeface="sans"
        android:onClick="clickLetter"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="L"
        android:id="@+id/btnL"
        android:layout_alignTop="@+id/btnK"
        android:layout_toRightOf="@+id/btnK"
        android:textColor="#fbfa21"
        android:textStyle="bold"
        android:typeface="sans"
        android:onClick="clickLetter"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="M"
        android:id="@+id/btnM"
        android:textColor="#fbfa21"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_alignTop="@+id/btnN"
        android:layout_alignParentLeft="true"
        android:onClick="clickLetter"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="N"
        android:id="@+id/btnN"
        android:textColor="#fbfa21"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_above="@+id/btnT"
        android:layout_toRightOf="@+id/btnM"
        android:onClick="clickLetter"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="O"
        android:id="@+id/btnO"
        android:layout_alignTop="@+id/btnN"
        android:layout_alignLeft="@+id/btnI"
        android:textColor="#fbfa21"
        android:textStyle="bold"
        android:typeface="sans"
        android:onClick="clickLetter"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="P"
        android:id="@+id/btnP"
        android:layout_alignTop="@+id/btnO"
        android:layout_toRightOf="@+id/btnO"
        android:textColor="#fbfa21"
        android:textStyle="bold"
        android:typeface="sans"
        android:onClick="clickLetter"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Q"
        android:id="@+id/btnQ"
        android:layout_alignTop="@+id/btnP"
        android:layout_toLeftOf="@+id/btnL"
        android:textColor="#fbfa21"
        android:textStyle="bold"
        android:typeface="sans"
        android:onClick="clickLetter"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="R"
        android:id="@+id/btnR"
        android:layout_alignTop="@+id/btnQ"
        android:layout_toRightOf="@+id/btnQ"
        android:textColor="#fbfa21"
        android:textStyle="bold"
        android:typeface="sans"
        android:onClick="clickLetter"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="S"
        android:id="@+id/btnS"
        android:textColor="#fbfa21"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_alignTop="@+id/btnT"
        android:layout_alignParentLeft="true"
        android:onClick="clickLetter"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="T"
        android:id="@+id/btnT"
        android:textColor="#fbfa21"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_alignTop="@+id/btnU"
        android:layout_toRightOf="@+id/btnS"
        android:onClick="clickLetter"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="U"
        android:id="@+id/btnU"
        android:textColor="#fbfa21"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_alignTop="@+id/btnV"
        android:layout_toRightOf="@+id/btnT"
        android:onClick="clickLetter"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="V"
        android:id="@+id/btnV"
        android:textColor="#fbfa21"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_above="@+id/btnY"
        android:layout_toRightOf="@+id/btnU"
        android:onClick="clickLetter"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="W"
        android:id="@+id/btnW"
        android:layout_alignTop="@+id/btnV"
        android:layout_alignLeft="@+id/btnQ"
        android:textColor="#fbfa21"
        android:textStyle="bold"
        android:typeface="sans"
        android:onClick="clickLetter"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="X"
        android:id="@+id/btnX"
        android:layout_alignTop="@+id/btnW"
        android:layout_toRightOf="@+id/btnW"
        android:textColor="#fbfa21"
        android:textStyle="bold"
        android:typeface="sans"
        android:onClick="clickLetter"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Y"
        android:id="@+id/btnY"
        android:textColor="#fbfa21"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_above="@+id/btnPlay"
        android:layout_toLeftOf="@+id/btnZ"
        android:onClick="clickLetter"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Z"
        android:id="@+id/btnZ"
        android:textColor="#fbfa21"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_above="@+id/btnHome"
        android:layout_toRightOf="@+id/btnU"
        android:onClick="clickLetter"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/btnPlay"
        android:textStyle="bold|italic"
        android:textSize="20dp"
        android:textColor="#f1f32f"
        android:background="#100af3"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btnY" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/btnHome"
        android:textStyle="bold|italic"
        android:textSize="20dp"
        android:textColor="#f1f32f"
        android:background="#100af3"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnZ" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtUnderScore"
        android:textSize="25dp"
        android:textColor="#fefdff"
        android:hint="The word for you is ...."
        android:gravity="center"
        android:layout_above="@+id/txthint"
        android:layout_toLeftOf="@+id/Image4"
        android:layout_marginBottom="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txthint"
        android:textSize="20dp"
        android:layout_alignParentEnd="false"
        android:gravity="center"
        android:hint="hint"
        android:textColor="#fef5ff"
        android:layout_above="@+id/btnB"
        android:layout_toRightOf="@+id/btnA" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="20dp"
            android:layout_alignParentEnd="false"
            android:gravity="center"
            android:hint="hint"
            android:textColor="#fef5ff"
            android:text="Hint : "
            android:layout_above="@+id/btnA"
            android:layout_toLeftOf="@+id/btnB" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="20dp"
            android:layout_alignParentEnd="false"
            android:gravity="center"
            android:hint="hint"
            android:textColor="#fef5ff"
            android:text="Wrong Guess :"
            android:layout_marginTop="27dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/txtWrongGuess"
            android:layout_marginRight="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtWrongGuess"
            android:textSize="20dp"
            android:layout_alignParentEnd="false"
            android:gravity="center"
            android:textColor="#fef5ff"
            android:layout_alignTop="@+id/textView2"
            android:layout_centerHorizontal="true" />


    <ImageView
        android:id="@+id/Image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image2"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true" />

    <ImageView
        android:id="@+id/Image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image1"
        android:layout_marginLeft="26dp"
        android:layout_alignBottom="@+id/Image2"
        android:layout_toRightOf="@+id/btnE" />

    <ImageView
        android:id="@+id/Image3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image3"
        android:layout_alignTop="@+id/Image1"
        android:layout_alignRight="@+id/Image1" />

    <ImageView
        android:id="@+id/Image4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image4"
        android:layout_alignTop="@+id/Image3"
        android:layout_alignLeft="@+id/Image3" />

    <ImageView
        android:id="@+id/hang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hang6"
        android:layout_alignTop="@+id/txtWrongGuess"
        android:layout_toLeftOf="@+id/Image1"
        android:layout_above="@+id/txthint"
        android:background="@android:color/transparent"
        android:alpha=".40"/>




</RelativeLayout>